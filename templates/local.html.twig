{% extends 'base.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('css/local.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
<div class="container">
    <center>
        <div class="colorBox">
            <div class="localBorder">
                {% if lastData.value < 600 %}
                <div class="green">
                {% elseif lastData.value < 900  %}
                <div class="orange">
                {% else %}
                <div class="red">  
                {% endif %}
                    <div class="date">
                        {{lastData.sendedAt |date('d-m-Y g:i a')}}
                    </div>
                    <div class="value">
                        {{lastData.value}} ppm
                    </div>
                    <div class="local">
                        local {{lastData.local}}
                    </div>
                    {% if interval.i < 6 and interval.h < 1  and interval.d < 1  and interval.m < 1 %}
                        <div class="diffDate" id="whiteText">
                    {% else %}
                        <div class="diffDate" id="redText">
                    {% endif %}
                
                        <p>La dernière mesure à été prise il y a :</p>
                        <p>{{interval.m}} mois, {{interval.d}} jour(s), {{interval.h}} heure(s), {{interval.i}} minute(s), {{interval.s}} seconde(s), </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="legend">
            <div class="greenCode">
                <p>Taux de CO2 bon</p>
            </div>
            <div class="orangeCode">
                <p>Taux de CO2 moyen</p>
            </div>
            <div class="redCode">
                <p>Taux de CO2 anormalement haut</p>
            </div>
        </div>
    </center>
</div>
{% endblock %}
