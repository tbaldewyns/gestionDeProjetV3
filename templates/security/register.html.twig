{% extends 'base.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('css/security/login.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
<div class="container">
    <center>
        <section class="formSection">
            <div class="registerCard">

                <h1 class="formTitle">
                    Registration
                </h1>

                {{ form_start(registrationForm) }}

                <div class="names">
                    {{ form_row(registrationForm.firstname, {'attr':{'placeholder':'Pr√©nom'}}) }}
                    {{ form_row(registrationForm.lastname, {'attr':{'placeholder':'Nom de famille'}}) }}
                </div>
                <hr>
                
                <div class="email">
                    {{ form_row(registrationForm.email, {'attr':{'placeholder':'Adresse e-mail'}}) }}
                </div>
                <hr>
                <div class="passwords">
                    {{ form_row(registrationForm.password, {'attr':{'placeholder':'Mot de passe'}}) }}
                    {{ form_row(registrationForm.confirmPassword, {'attr':{'placeholder':'Confirmer mot de passe'}}) }}
                </div>
                <hr>
                <br>
                <div class="btn">
                    <button type="submit" class="registerBtn">Register</button>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </section>
    </center>
</div>
{% endblock %}